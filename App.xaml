<Application
	x:Class="devTools.WiXComponents.App"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:viewModels="clr-namespace:devTools.WiXComponents.ViewModels"
	xmlns:views="clr-namespace:devTools.WiXComponents.Views">
	<Application.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="Styles/Common.xaml"></ResourceDictionary>
			</ResourceDictionary.MergedDictionaries>
			<DataTemplate DataType="{x:Type viewModels:HomeViewModel}">
				<views:Home />
			</DataTemplate>
			<DataTemplate DataType="{x:Type viewModels:GenerateViewModel}">
				<views:Generate />
			</DataTemplate>
			<DataTemplate DataType="{x:Type viewModels:FindViewModel}">
				<views:Find />
			</DataTemplate>
			<DataTemplate DataType="{x:Type viewModels:AboutViewModel}">
				<views:About />
			</DataTemplate>
		</ResourceDictionary>
	</Application.Resources>
</Application>
